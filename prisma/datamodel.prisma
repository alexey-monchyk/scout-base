type User {
  id: ID! @id
  fullName: String!
  birthday: DateTime!
  username: String! @unique
  password: String!
}

type Movie {
  id: ID! @id
  title: String!
  rating: Float!
  year: DateTime!
  actors: [Actor!]! @relation(name: "ActorOnMovie", onDelete: SET_NULL)
}

type Actor {
  id: ID! @id
  name: String!
  birthday: DateTime!
  country: String!
  movies: [Movie!]! @relation(name: "ActorOnMovie", onDelete: SET_NULL)
  directors: [Director!]! @relation(name: "ActorOnDirector", onDelete: SET_NULL)
}

type Director {
  id: ID! @id
  name: String!
  birthday: DateTime!
  country: String!
  actors: [Actor!]! @relation(name: "ActorOnDirector", onDelete: SET_NULL)
}
